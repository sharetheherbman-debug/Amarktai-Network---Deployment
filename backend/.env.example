# ============================================================================
# Amarktai Network - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# For production deployment, ensure all secrets are properly secured

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MongoDB connection URI
# Local: mongodb://localhost:27017
# Docker: mongodb://127.0.0.1:27017
# Remote: mongodb://username:password@host:port/database
MONGO_URI=mongodb://127.0.0.1:27017

# Database name
MONGO_DB_NAME=amarktai

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# JWT secret for token signing - MUST be changed in production!
# Generate with: openssl rand -hex 32
JWT_SECRET=change-me-use-openssl-rand-hex-32

# Admin password for dashboard access
# Generate with: openssl rand -base64 24
ADMIN_PASSWORD=change-me-secure-password

# ============================================================================
# AI & OPENAI CONFIGURATION
# ============================================================================
# OpenAI API key for AI features (chat, trading decisions, analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI model to use for API key testing (default: gpt-4o-mini)
# Options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo, gpt-4
OPENAI_TEST_MODEL=gpt-4o-mini

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
# Enable/disable email alerts and reports
SMTP_ENABLED=false

# SMTP server configuration (if enabled)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=
FROM_NAME=Amarktai Network

# ============================================================================
# TRADING LIMITS & SAFETY
# ============================================================================
# Maximum number of trading bots per user
MAX_BOTS=10

# Maximum daily loss percentage before emergency stop (%)
MAX_DAILY_LOSS_PERCENT=5

# Minimum capital per bot (ZAR)
MIN_BOT_CAPITAL=1000

# ============================================================================
# TRADING SAFETY & FEATURE FLAGS
# ============================================================================
# TRADING MODE GATES (CRITICAL SAFETY FEATURE):
# The system will NOT place any orders unless at least one mode is enabled.
# Both can be enabled simultaneously for flexibility.

# Enable paper trading mode (simulated trades, no real money)
# Recommended: Keep enabled for testing and development
# Set to 1 to enable, 0 to disable
PAPER_TRADING=1

# Enable live trading mode (DANGER: Uses REAL funds!)
# Requires API keys, double confirmation, and proper risk guardrails
# Set to 1 to enable, 0 to disable
# WARNING: Only enable after thorough testing in paper mode
LIVE_TRADING=0

# AUTOPILOT GATES:
# Autopilot will NOT run unless AUTOPILOT_ENABLED=1 AND a trading mode is enabled
# Enable autopilot (automated bot management and profit reinvestment)
# Safe to enable after successful paper trading
# Set to 1 to enable, 0 to disable
AUTOPILOT_ENABLED=0

# Enable live trading (DANGER: Uses REAL funds! Keep false until ready)
# Requires API keys, double confirmation, and proper risk guardrails
ENABLE_LIVE_TRADING=false

# Enable self-learning AI (learns from trading patterns)
# Safe to enable - improves trading strategy over time
ENABLE_SELF_LEARNING=true

# Enable self-healing (automatically pauses underperforming bots)
# Safe to enable - protects against losses
ENABLE_SELF_HEALING=true

# Enable trading execution (set to false to disable all trading)
ENABLE_TRADING=false

# Enable CCXT exchange connections (safe - needed for market data)
ENABLE_CCXT=true

# ============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================================================
# Fetch.ai API key for AI market signals
FETCHAI_API_KEY=

# FLOKx API key for market intelligence
FLOKX_API_KEY=

# Enable real-time SSE (Server-Sent Events) streaming
ENABLE_REALTIME=true

# Enable background schedulers (autonomous systems, self-healing, etc.)
ENABLE_SCHEDULERS=false

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Prevent Python from writing .pyc files (avoids permission issues)
PYTHONDONTWRITEBYTECODE=1

# Server host and port (for direct run, systemd overrides this)
HOST=127.0.0.1
PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=production
